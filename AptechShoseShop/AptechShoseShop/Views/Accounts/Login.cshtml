@{
    ViewBag.Title = "Login";
}

<div class="my-account-area" style="margin-bottom:30px">
    <div class="container">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-6" style="border: 1px solid #e8e8e9; padding:30px">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <form method="post" action="@Url.Action("Login", "Accounts")">
                    <h1>Login</h1>
                    <p>
                        <label>Email<span class="required text-danger">*</span></label>
                        <input required name="email" class="form-control">
                    </p>
                    <p>
                        <label>Password <span class="required text-danger">*</span></label>
                        <input required name="password" type="password" class="form-control">
                    </p>
                    <div style="margin-top: 30px" class="row">
                        <div class="col-12 text-center" style="padding-bottom:20px">
                            <div class="" style="margin-bottom:7px">
                                <button style="width:100%" class="btn btn-success" type="submit">Login</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-3">

            </div>
        </div>
    </div>
</div>
